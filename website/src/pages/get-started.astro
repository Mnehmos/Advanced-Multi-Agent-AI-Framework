<style>
  .ide-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    border-radius: 0.75rem;
    border: 2px solid var(--color-border-default);
    background-color: var(--color-bg-surface);
    transition: all 0.2s ease;
    cursor: pointer;
  }
  @media (min-width: 640px) {
    .ide-btn {
      padding: 1.5rem;
    }
  }
  .ide-btn:hover {
    border-color: var(--color-text-muted);
  }
  .ide-btn.active {
    border-color: var(--color-brand-primary);
    background-color: color-mix(in srgb, var(--color-brand-primary) 10%, transparent);
  }
  .ide-instructions.hidden {
    display: none;
  }
</style>

<script>
  // IDE tab switching
  const ideBtns = document.querySelectorAll('.ide-btn');
  const instructions = document.querySelectorAll('.ide-instructions');
  
  ideBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const ide = btn.getAttribute('data-ide');
      
      // Update button states
      ideBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      
      // Show/hide instructions
      instructions.forEach(inst => {
        inst.classList.add('hidden');
      });
      document.getElementById(`${ide}-instructions`)?.classList.remove('hidden');
    });
  });
  
  // Copy button functionality
  const copyBtns = document.querySelectorAll('.copy-btn');
  copyBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const codeBlock = btn.closest('.bg-\\[var\\(--color-footer-bg\\)\\]')?.querySelector('code');
      if (codeBlock) {
        navigator.clipboard.writeText(codeBlock.textContent || '');
        btn.textContent = 'Copied!';
        setTimeout(() => {
          btn.textContent = 'Copy';
        }, 2000);
      }
    });
  });
</script>
